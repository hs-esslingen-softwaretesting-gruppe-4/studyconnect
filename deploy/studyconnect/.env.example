# Required: image repository (owner/repo), used as ghcr.io/${IMAGE_REPO}:latest
IMAGE_REPO=OWNER/REPO

# Required: Traefik routing
TRAEFIK_HOST=studyconnect.example.com

# Required: Spring Boot actuator basic auth (application.properties requires these)
SPRING_SECURITY_USER_NAME=admin
SPRING_SECURITY_USER_PASSWORD=change-me

# Required: DB credentials (used by Postgres + Spring Boot)
POSTGRES_DB=studyconnectdb
POSTGRES_USER=studyconnect
POSTGRES_PASSWORD=change-me

# Schema strategy for deployments
JPA_HIBERNATE_DDL_AUTO=update

# Keycloak (frontend + backend)
KEYCLOAK_AUTH_SERVER_URL=https://keycloak.example.com
KEYCLOAK_REALM=studyconnect
STUDYCONNECT_REQUIRED_ROLE=studyconnect

# CORS / registration origin check (must match browser Origin exactly)
ALLOWED_ORIGIN=https://studyconnect.example.com

# Optional: Keycloak admin token service (leave empty to disable initialization)
KEYCLOAK_ADMIN=
KEYCLOAK_ADMIN_PASSWORD=
